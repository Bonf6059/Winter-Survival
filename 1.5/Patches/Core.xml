      <wildness>0.85</wildness>
	  </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
  <xpath>/Defs/ThingDef[defName="Megasloth"]/race/baseHungerRate</xpath>
    <value>
      <baseHungerRate>0.9</baseHungerRate>
	  </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
  <xpath>/Defs/ThingDef[defName="WoolMegasloth"]/statBases/StuffPower_Insulation_Cold</xpath>
